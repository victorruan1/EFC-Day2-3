<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MovieShop</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <style>
        .grid { display:grid; grid-template-columns: repeat(auto-fill, minmax(160px, 1fr)); gap: 1rem; }
        .poster { border-radius: 10px; overflow: hidden; box-shadow: 0 2px 12px rgba(0,0,0,.15)}
    </style>
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">MovieShop</a>
            @inject MovieShop.ApplicationCore.Contracts.Services.IGenreService GenreService
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 align-items-center">
                    <li class="nav-item me-2"><a class="nav-link" href="/Movies/All">All Movies</a></li>
                    <li class="nav-item me-3">
                        @{ 
                            var genres = GenreService.GetAllAsync().GetAwaiter().GetResult();
                            var selected = ViewBag.SelectedGenre as string;
                        }
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-light dropdown-toggle" type="button" id="genreDropdown" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false">
                                @(selected ?? "Genres")
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="genreDropdown" style="max-height:300px; overflow:auto;">
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Genres")">All</a></li>
                                @foreach (var g in genres)
                                {
                                    var url = Url.Action("Index", "Genres", new { name = g });
                                    <li><a class="dropdown-item @(g == selected ? "active" : "")" href="@url">@g</a></li>
                                }
                            </ul>
                        </div>
                    </li>
                </ul>
                <div class="d-flex">
                    <a class="btn btn-outline-light me-2" href="/Account/Login">Login</a>
                    <a class="btn btn-primary" href="/Account/Register">Register</a>
                </div>
            </div>
        </div>
    </nav>
    <div class="container py-4">
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

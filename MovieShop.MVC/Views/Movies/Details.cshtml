@model MovieShop.ApplicationCore.Models.MovieDetailsModel

<div class="container py-4">

    <!-- ROW 1: poster | details (badges, rating, overview) | buttons -->
    <div class="row g-4 align-items-start mb-4">
        <!-- Poster -->
        <div class="col-12 col-md-3 col-lg-3">
            <img src="@Model.PosterUrl"
                 class="img-fluid rounded shadow-sm w-100"
                 alt="@Model.Title" />
        </div>

        <!-- Details + badges + rating -->
        <div class="col-12 col-md-6 col-lg-7">
            <h2 class="mb-1">@Model.Title</h2>

            @if (!string.IsNullOrWhiteSpace(Model.TagLine))
            {
                <p class="text-muted fst-italic mb-2">@Model.TagLine</p>
            }

            <!-- Genres as badges -->
            <div class="mb-2">
                @if (Model.Genres != null)
                {
                    foreach (var g in Model.Genres)
                    {
                        <span class="badge text-bg-secondary me-1">@g</span>
                    }
                }

                <!-- Rating as badge -->
                @if (Model.Rating is not null)
                {
                    <span class="badge text-bg-success ms-1">‚≠ê @Model.Rating</span>
                }
            </div>

            @if (!string.IsNullOrWhiteSpace(Model.Overview))
            {
                <p class="mb-3">@Model.Overview</p>
            }

            <!-- Quick facts inline -->
            <div class="small text-muted">
                @if (Model.ReleaseDate is not null)
                {
                    <span class="me-3"><strong>Release:</strong> @Model.ReleaseDate?.ToString("MMM d, yyyy")</span>
                }
                @if (Model.RunTime is not null)
                {
                    <span class="me-3"><strong>Run time:</strong> @Model.RunTime min</span>
                }
            </div>
        </div>

        <!-- Actions (Buy/Review or Watch) -->
        <div class="col-12 col-md-3 col-lg-2 text-md-end">
            @{
                var purchased = false;
                if (Context.Request.Query.ContainsKey("purchased"))
                {
                    var val = Context.Request.Query["purchased"].ToString();
                    if (!string.IsNullOrWhiteSpace(val))
                    {
                        bool.TryParse(val, out purchased);
                    }
                }
            }

            @if (purchased)
            {
                <a class="btn btn-success w-100 mb-2" href="/Movies/Watch/@Model.Id">WATCH MOVIE</a>
            }
            else
            {
                <button class="btn btn-primary w-100 mb-2"
                        data-bs-toggle="modal"
                        data-bs-target="#buyModal">
                    BUY @((Model.Price ?? 0).ToString("C"))
                </button>
            }

            <button class="btn btn-outline-secondary w-100"
                    data-bs-toggle="modal"
                    data-bs-target="#reviewModal">
                REVIEW
            </button>
        </div>
    </div>

    <!-- ROW 2: left = movie facts + trailers; right = cast -->
    <div class="row g-4">
        <!-- Left column -->
        <div class="col-12 col-lg-5">
            <!-- Movie Facts -->
            <div class="mb-4">
                <h5 class="mb-2">Movie Facts</h5>
                <ul class="list-group">
                    @if (Model.ReleaseDate is not null)
                    {
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Release Date</span>
                            <span class="fw-semibold">@Model.ReleaseDate?.ToString("MMM d, yyyy")</span>
                        </li>
                    }
                    @if (Model.RunTime is not null)
                    {
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Run Time</span>
                            <span class="fw-semibold">@Model.RunTime min</span>
                        </li>
                    }
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Box Office</span>
                        <span class="fw-semibold">@((Model.Revenue ?? 0).ToString("C"))</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Budget</span>
                        <span class="fw-semibold">@((Model.Budget ?? 0).ToString("C"))</span>
                    </li>
                </ul>
            </div>

            <!-- Trailers -->
            <div>
                <h5 class="mb-2">Trailers</h5>
                <ul class="list-group">
                    @if (Model.Trailers != null && Model.Trailers.Any())
                    {
                        foreach (var t in Model.Trailers)
                        {
                            <li class="list-group-item">
                                <a href="@t.Url" target="_blank" rel="noopener" class="text-decoration-none">
                                    @t.Name
                                </a>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="list-group-item text-muted">No trailers available.</li>
                    }
                </ul>
            </div>
        </div>

        <!-- Right column: Cast -->
        <div class="col-12 col-lg-7">
            <h5 class="mb-2">Cast</h5>
            <ul class="list-group list-group-flush">
                @if (Model.Cast != null && Model.Cast.Any())
                {
                    foreach (var c in Model.Cast)
                    {
                        <li class="list-group-item d-flex align-items-center">
                            <img src="@(string.IsNullOrWhiteSpace(c.ProfilePath) ? "/images/default-cast.png" : c.ProfilePath)"
                                 class="rounded-circle me-3"
                                 style="width:40px;height:40px;object-fit:cover"
                                 alt="@c.Name" />
                            <div class="flex-grow-1">
                                <a asp-controller="Cast"
                                   asp-action="Details"
                                   asp-route-id="@c.Id"
                                   class="fw-semibold text-decoration-none">
                                    @c.Name
                                </a>
                                <div class="text-muted small">@c.Character</div>
                            </div>
                        </li>
                    }
                }
                else
                {
                    <li class="list-group-item text-muted">No cast listed.</li>
                }
            </ul>
        </div>
    </div>
</div>

<!-- BUY MODAL -->
<div class="modal fade" id="buyModal" tabindex="-1" aria-labelledby="buyModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="buyModalLabel">Buy @Model.Title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>You are about to purchase <strong>@Model.Title</strong> for
           <strong>@((Model.Price ?? 0).ToString("C"))</strong>.</p>
      </div>
      <div class="modal-footer">
        <form asp-controller="User" asp-action="Purchase" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <input type="hidden" name="movieId" value="@Model.Id" />
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Purchase</button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- REVIEW MODAL -->
<div class="modal fade" id="reviewModal" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <form asp-controller="Movies" asp-action="AddReview" method="post" class="modal-content">
      @Html.AntiForgeryToken()
      <div class="modal-header">
        <h5 class="modal-title" id="reviewModalLabel">Leave a Review</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <input type="hidden" name="movieId" value="@Model.Id" />
        <div class="mb-3">
            <label class="form-label">Rating</label>
            <select class="form-select" name="rating">
                @for (var i = 1; i <= 10; i++)
                {
                    <option value="@i">@i</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Your Review</label>
            <textarea class="form-control" name="reviewText" rows="4" maxlength="4000"
                      placeholder="What did you think?"></textarea>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-success">Submit</button>
      </div>
    </form>
  </div>
</div>
